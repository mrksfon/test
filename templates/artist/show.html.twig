{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_artist') }}">Artists</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{artist.name}}</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="{{artist.imageLink}}" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{artist.name}}</h5>
            <p class="text-muted mb-1">Popularity : {{artist.popularity}}</p>
            <p class="text-muted mb-4">Followers : {{artist.followers}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Album Name</p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">Release date</p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">Total tracks</p>
                    </div>
                </div>
                <hr>
            {% for album in artist.albums %}
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">{{album.name}}</p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">{{album.releaseDate}}</p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">{{album.totalTracks}}</p>
                    </div>
                </div>
                <hr>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}


            
