{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Followers</th>
                <td>{{ artist.followers }}</td>
            </tr>
            <tr>
                <th>Spotify_artist_id</th>
                <td>{{ artist.spotifyArtistId }}</td>
            </tr>
            <tr>
                <th>Image_link</th>
                <td>{{ artist.imageLink }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Popularity</th>
                <td>{{ artist.popularity }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ artist.genre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_artist_index') }}">back to list</a>

    <a href="{{ path('app_admin_artist_edit', {'id': artist.id}) }}" class="btn btn-warning">edit</a>

    {{ include('admin_artist/_delete_form.html.twig') }}
{% endblock %}
