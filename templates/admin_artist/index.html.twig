{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Followers</th>
                <th>Spotify_artist_id</th>
                <th>Image_link</th>
                <th>Name</th>
                <th>Popularity</th>
                <th>Genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.followers }}</td>
                <td>{{ artist.spotifyArtistId }}</td>
                <td>{{ artist.imageLink }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.popularity }}</td>
                <td>{{ artist.genre }}</td>
                <td>
                    <a href="{{ path('app_admin_artist_show', {'id': artist.id}) }}">show</a>
                    <a href="{{ path('app_admin_artist_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_artist_new') }}">Create new</a>
{% endblock %}
