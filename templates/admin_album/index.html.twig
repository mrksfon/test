{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <h1>Album index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Spotify_album_id</th>
                <th>Name</th>
                <th>Release_date</th>
                <th>Total_tracks</th>
                <th>Artist</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.spotifyAlbumId }}</td>
                <td>{{ album.name }}</td>
                <td>{{ album.releaseDate }}</td>
                <td>{{ album.totalTracks }}</td>
                <td>{{ album.artist.name }}</td>
                <td>
                    <a href="{{ path('app_admin_album_show', {'id': album.id}) }}">show</a>
                    <a href="{{ path('app_admin_album_edit', {'id': album.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_album_new') }}">Create new</a>
{% endblock %}
